<Window x:Class="Slashboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Slashboard"
        mc:Ignorable="d"
        Title="PrimaryWindow" Height="540" Width="960" Closing="Window_Closing">
    <Grid>
        <Grid x:Name="WindowRoot">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="10*"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Grid.Row="0">
                <Button x:Name="DeathTraps" Content="Death Traps" />
                <Button x:Name="MainPage" Content="Main Page" />
                </StackPanel>
            <Frame x:Name="RootFrame" Grid.Row="1" Source="/Pages/MainPage.xaml" NavigationUIVisibility="Hidden"/>
        </Grid>
        
    </Grid>
</Window>
